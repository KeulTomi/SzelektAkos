<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.foxplan.keult.szelektakos"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="hu.foxplan.keult.szelektakos.SzelektAkos"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="hu.foxplan.keult.szelektakos.mainscreen.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.foxplan.keult.szelektakos.shop.ShopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="hu.foxplan.keult.szelektakos.THG_Web"
            android:screenOrientation="portrait" />
        <activity
            android:name="hu.foxplan.keult.szelektakos.games.PickOneGame"
            android:screenOrientation="portrait" />
        <activity
            android:name="hu.foxplan.keult.szelektakos.games.TrueFalseGame"
            android:screenOrientation="portrait" />
        <activity
            android:name="hu.foxplan.keult.szelektakos.games.TrashesGame"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="hu.foxplan.keult.szelektakos.games.jumpgame.JumpGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="hu.foxplan.keult.szelektakos.games.WordPuzzle"
            android:screenOrientation="portrait" />
    </application>

</manifest>