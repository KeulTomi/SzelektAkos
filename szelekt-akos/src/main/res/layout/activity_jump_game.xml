<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_jump_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <hu.foxplan.keult.szelektakos.games.jumpgame.JumpGameView
        android:id="@+id/jump_game_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white" />

    <ProgressBar
        android:id="@+id/jump_game_progress_energy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progress_bar"
        android:progressTint="@color/colorPrimary" />

    <ProgressBar
        android:id="@+id/jump_game_progress_life"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progress_bar"
        android:progressTint="@color/colorPrimary" />

    <ImageView
        android:id="@+id/jump_game_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:src="@drawable/head2_crop" />

    <TextView
        android:id="@+id/jump_game_reached_points_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="22sp" />


    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/energy_picto" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="21dp"
        android:src="@mipmap/food_picto" />


    <ImageView
        android:id="@+id/jump_game_close"
        android:layout_width="44dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_close" />

</RelativeLayout>