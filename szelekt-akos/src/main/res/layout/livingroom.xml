<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bed_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/livingroom_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:src="@drawable/livingroom" />

    <ImageView
        android:id="@+id/thgkft_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thgkft" />

    <ImageView
        android:id="@+id/right_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rigthhand" />

    <ImageView
        android:id="@+id/left_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lefthand" />

    <ImageView
        android:id="@+id/akos_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/foot" />

    <ImageView
        android:id="@+id/akos_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/szelektakosbody" />

    <ImageView
        android:id="@+id/eye_animation_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/trouser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pants00" />

    <ImageView
        android:id="@+id/animation_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:visibility="gone"/>

</RelativeLayout>