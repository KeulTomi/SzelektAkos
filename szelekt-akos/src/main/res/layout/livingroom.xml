<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/living_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="1300px"
        android:layout_height="2318px"
        android:src="@drawable/livingroom" />

    <ImageView
        android:id="@+id/thgkft_picture"
        android:layout_width="422px"
        android:layout_height="308px"
        android:layout_marginLeft="736px"
        android:layout_marginTop="497px"
        android:src="@drawable/thgkft" />

    <ImageView
        android:id="@+id/right_hand"
        android:layout_width="1300px"
        android:layout_height="1300px"
        android:layout_marginLeft="0px"
        android:layout_marginTop="700px"
        android:src="@drawable/rigthhand" />

    <ImageView
        android:id="@+id/left_hand"
        android:layout_width="1300px"
        android:layout_height="1300px"
        android:layout_marginLeft="0px"
        android:layout_marginTop="700px"
        android:src="@drawable/lefthand" />

    <ImageView
        android:id="@+id/akos_foot"
        android:layout_width="1300px"
        android:layout_height="1300px"
        android:layout_marginLeft="0px"
        android:layout_marginTop="700px"
        android:src="@drawable/foot" />

    <ImageView
        android:id="@+id/akos_body"
        android:layout_width="1300px"
        android:layout_height="1300px"
        android:layout_marginLeft="0px"
        android:layout_marginTop="700px"
        android:src="@drawable/szelektakosbody" />

    <ImageView
        android:id="@+id/eye_animation_place"
        android:layout_width="190px"
        android:layout_height="210px"
        android:layout_marginLeft="460px"
        android:layout_marginTop="815px" />

    <ImageView
        android:id="@+id/trouser"
        android:layout_width="1300px"
        android:layout_height="1300px"
        android:layout_marginLeft="0px"
        android:layout_marginTop="700px"
        android:src="@drawable/pants00" />

    <ImageView
        android:id="@+id/animation_place"
        android:layout_width="1000px"
        android:layout_height="1000px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="900px"
        android:visibility="visible" />

</RelativeLayout>