<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trash_game_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.foxplan.keult.szelektakos.games.TrashesGame">

    <RelativeLayout
        android:id="@+id/trash_game_root"
        android:layout_width="1300px"
        android:layout_height="2318px">

        <ImageView
            android:layout_width="1300px"
            android:layout_height="2318px"
            android:scaleType="center"
            android:src="@drawable/green_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:layout_marginTop="77px"
            android:background="@android:color/white" />

        <ProgressBar
            android:id="@+id/progress_energy_TG"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="400px"
            android:layout_height="86px"
            android:layout_marginLeft="52px"
            android:layout_marginTop="77px"
            android:max="100"
            android:progress="100"
            android:progressBackgroundTint="@android:color/white"
            android:progressDrawable="@drawable/progress_bar"
            android:progressTint="@color/colorPrimary" />

        <ProgressBar
            android:id="@+id/progress_life_TG"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="400px"
            android:layout_height="86px"
            android:layout_marginLeft="852px"
            android:layout_marginTop="77px"
            android:max="100"
            android:progress="100"
            android:progressBackgroundTint="@android:color/white"
            android:progressDrawable="@drawable/progress_bar"
            android:progressTint="@color/colorPrimary" />

        <ImageView
            android:id="@+id/header_TG"
            android:layout_width="1300px"
            android:layout_height="240px"
            android:src="@drawable/head2_crop" />

        <TextView
            android:id="@+id/reached_points_txt_TG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75px"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="80px" />


        <ImageView
            android:layout_width="74px"
            android:layout_height="89px"
            android:layout_marginLeft="211px"
            android:layout_marginTop="75px"
            android:src="@drawable/energy_picto" />

        <ImageView
            android:layout_width="79px"
            android:layout_height="78px"
            android:layout_marginLeft="1017px"
            android:layout_marginTop="77px"
            android:src="@drawable/food_picto" />

        <ImageView
            android:id="@+id/garbage"
            android:layout_width="144px"
            android:layout_height="298px"
            android:layout_centerInParent="true"
            android:src="@drawable/pill" />

        <ImageView
            android:id="@+id/first_trash"
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_marginLeft="150px"
            android:layout_marginTop="350px"
            android:src="@drawable/trash_blue" />

        <ImageView
            android:id="@+id/second_trash"
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150px"
            android:layout_marginTop="350px"
            android:src="@drawable/trash_braun" />

        <ImageView
            android:id="@+id/third_trash"
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_centerVertical="true"
            android:src="@drawable/trash_white" />

        <ImageView
            android:id="@+id/fourth_trash"
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/trash_build" />

        <ImageView
            android:id="@+id/fifth_trash"
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="350px"
            android:layout_marginRight="150px"
            android:src="@drawable/trash_yellow" />

        <ImageView
            android:id="@+id/sixth_trash"
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="350px"
            android:layout_marginLeft="150px"
            android:src="@drawable/trash_green" />

        <ProgressBar
            android:id="@+id/game_time_progress_TG"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_alignParentBottom="true"
            android:max="500"
            android:progress="500"
            android:progressDrawable="@drawable/game_time_progress" />

        <ImageView
            android:id="@+id/close_TG"
            android:layout_width="170px"
            android:layout_height="150px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

</FrameLayout>
