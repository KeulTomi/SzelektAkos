<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/true_false_game_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.foxplan.keult.szelektakos.games.TrueFalseGame">

    <RelativeLayout
        android:id="@+id/true_false_game_root"
        android:layout_width="1300px"
        android:layout_height="2318px">


        <ImageView
            android:layout_width="1300px"
            android:layout_height="2318px"
            android:scaleType="center"
            android:src="@drawable/true_false_back" />

        <TextView
            android:layout_width="1300px"
            android:layout_height="86px"
            android:layout_marginTop="77px"
            android:background="@android:color/white" />

        <ProgressBar
            android:id="@+id/progress_energy_TFG"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="400px"
            android:layout_height="86px"
            android:layout_marginLeft="52px"
            android:layout_marginTop="77px"
            android:max="100"
            android:progress="100"
            android:progressBackgroundTint="@android:color/white"
            android:progressDrawable="@drawable/progress_bar"
            android:progressTint="@color/colorPrimary" />

        <ProgressBar
            android:id="@+id/progress_life_TFG"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="400px"
            android:layout_height="86px"
            android:layout_marginLeft="852px"
            android:layout_marginTop="77px"
            android:max="100"
            android:progress="100"
            android:progressBackgroundTint="@android:color/white"
            android:progressDrawable="@drawable/progress_bar"
            android:progressTint="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/layout_true"
            android:layout_width="650px"
            android:layout_height="1425px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150px"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/layout_false"
            android:layout_width="650px"
            android:layout_height="1425px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="150px"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/header_TFG"
            android:layout_width="1300px"
            android:layout_height="240px"
            android:src="@drawable/head2_crop" />

        <TextView
            android:id="@+id/reached_points_txt_TFG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="85px"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="60px" />


        <ImageView
            android:layout_width="74px"
            android:layout_height="89px"
            android:layout_marginLeft="211px"
            android:layout_marginTop="75px"
            android:src="@drawable/energy_picto" />

        <ImageView
            android:layout_width="79px"
            android:layout_height="78px"
            android:layout_marginLeft="1017px"
            android:layout_marginTop="77px"
            android:src="@drawable/food_picto" />

        <TextView
            android:id="@+id/question_txt_TFG"
            android:layout_width="1300px"
            android:layout_height="wrap_content"
            android:layout_marginTop="317px"
            android:text="Kik használták először a papírt?"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="55px" />

        <ProgressBar
            android:id="@+id/game_time_progress_TFG"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_alignParentBottom="true"
            android:max="500"
            android:progress="500"
            android:progressDrawable="@drawable/game_time_progress" />

        <ImageView
            android:id="@+id/close_TFG"
            android:layout_width="170px"
            android:layout_height="150px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

</FrameLayout>
