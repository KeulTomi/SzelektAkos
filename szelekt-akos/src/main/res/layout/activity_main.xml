<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="hu.foxplan.keult.szelektakos.mainscreen.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/menu_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/menubar" />

    <ImageView
        android:id="@+id/thg_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/picto_web" />

    <ImageView
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/picto_shop" />

    <ImageView
        android:id="@+id/pick_one_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/picto_valaszto" />

    <ImageView
        android:id="@+id/trash_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/picto_kuka" />

    <ImageView
        android:id="@+id/true_false_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/picto_igaz_hamis" />

    <ImageView
        android:id="@+id/jumping_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/picto_ugralos" />

    <ImageView
        android:id="@+id/words_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/picto_abc" />

    <ProgressBar
        android:id="@+id/progress_energy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:progressBackgroundTint="@android:color/white"
        android:progressDrawable="@drawable/progress_bar"
        android:progressTint="@color/colorPrimary" />

    <ProgressBar
        android:id="@+id/progress_life"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:progressBackgroundTint="@android:color/white"
        android:progressDrawable="@drawable/progress_bar"
        android:progressTint="@color/colorPrimary" />

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="466dp"
        android:scaleType="fitStart"
        android:src="@drawable/head2_crop" />

    <ImageView
        android:id="@+id/left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back_arrow" />

    <TextView
        android:id="@+id/recently_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/livingroom"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back_arrow2" />

    <TextView
        android:id="@+id/user_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="22sp" />


    <ImageView
        android:id="@+id/energy_picto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/energy_picto" />

    <ImageView
        android:id="@+id/food_picto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/food_picto" />

</RelativeLayout>
