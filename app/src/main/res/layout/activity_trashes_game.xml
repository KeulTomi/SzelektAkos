<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.szelektakos.games.TrashesGame">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/green_back"
        android:scaleType="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"/>

    <ProgressBar
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:id="@+id/progress_energy_TG"
        android:progressDrawable="@drawable/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressTint="@color/colorPrimary"
        android:progressBackgroundTint="@android:color/white"
        android:progress="100"
        android:max="100"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <ProgressBar
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:id="@+id/progress_life_TG"
        android:layout_alignParentRight="true"
        android:progressDrawable="@drawable/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressTint="@color/colorPrimary"
        android:progressBackgroundTint="@android:color/white"
        android:progress="100"
        android:max="100"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/head2_crop"
        android:id="@+id/header_TG"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reached_points_txt_TG"
        android:text="0"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/energy_picto"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/food_picto"
        android:layout_marginRight="60dp"
        android:layout_marginTop="21dp"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/garbage"
        android:layout_centerInParent="true"
        android:src="@mipmap/pill"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/first_trash"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"
        android:src="@mipmap/trash_blue"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/second_trash"
        android:layout_marginTop="90dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/trash_braun"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/third_trash"
        android:layout_marginTop="90dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/trash_white"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/fourth_trash"
        android:layout_marginTop="90dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/trash_build"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/fifth_trash"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/trash_yellow"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/sixth_trash"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/trash_green"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/game_time_progress_TG"
        android:layout_alignParentBottom="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/game_time_progress"
        android:progress="500"
        android:max="500"/>

    <ImageView
        android:layout_width="44dp"
        android:layout_height="45dp"
        android:id="@+id/close_TG"
        android:src="@drawable/ic_close"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

</RelativeLayout>
