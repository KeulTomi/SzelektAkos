<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@mipmap/shop_item_back">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/shop_item_picture"
        android:src="@mipmap/shopitem01"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/buy_button"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/shop_item_buy_title"
        android:text="megvesz"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_item_name"
        android:text="RÃ©pa"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/shop_item_picture"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_item_price"
        android:text="96"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_toLeftOf="@id/shop_item_picture"
        android:layout_centerInParent="true"
        android:layout_marginRight="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_item_life_value"
        android:text="12 %"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/shop_item_picture"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="50dp" />

</RelativeLayout>